{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "typeRoots": [ "node_modules/@types" ],
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
