{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "*": [
        "src/*"
      ],
      "base-environment": [
        "aurelia_project/environments/base"
      ]
    },
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "aurelia_project/generators/**/*",
    "aurelia_project/tasks/**/*",
    "aurelia_project/**/*.json",
    "x-scratch",
    "dist",
    "coverage",
    "test/e2e"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
